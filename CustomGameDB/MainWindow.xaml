<Window x:Class="CustomGameDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomGameDB"
        xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
        
        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" >
    <Window.Resources>
        <Style x:Key="textBlocks" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
            <Menu VerticalAlignment="Top" Grid.Row="0">
            <MenuItem Header="Juegos">
                <MenuItem Header="Añadir juego" />
                <MenuItem Header="Eliminar juego seleccionado" />
                
                
            </MenuItem>
            <MenuItem Header="Partidas guardadas">
                <MenuItem Header="_Add Game" />
                <MenuItem Header="_Remove Game"/>
            </MenuItem>
        </Menu>
        <ToolBar Grid.Row="1">
            <Button x:Name="BtBuscar" Content="Buscar:" Click="BtBuscarClick" />
            <TextBox x:Name="tbBuscar" Width="100" KeyDown="tbBuscar_KeyDown"  />
            <Button x:Name="btanterior" Click="btanterior_Click" >Atras</Button>
            
        </ToolBar>
        <DataGrid x:Name="dgDatosJuegos" Grid.Row="2" AutoGenerateColumns="False" ScrollViewer.ScrollChanged="dgGames_ScrollChanged"
          VirtualizingStackPanel.IsVirtualizing="True" 
          VirtualizingStackPanel.VirtualizationMode="Recycling" SelectionChanged="dgDatosJuegos_SelectionChanged"
                   GridLinesVisibility="None">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Título del Juego" Binding="{Binding name}" Width="*" />
                <DataGridTextColumn Header="fecha de lanzamiento" Binding="{Binding released}" Width="*" />
                <DataGridTextColumn Header="nota" Binding="{Binding rating}" Width="*" />
                <DataGridTemplateColumn Header="Portada" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <local:SkiaImage Bitmap="{Binding ImagenPrincipal}"   Height="200"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
            </DataGrid.Columns>
        </DataGrid>
        <Grid x:Name="gridDatosJuegos" Grid.Row="2" Visibility="Hidden" IsEnabled="False" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <StackPanel Grid.Column="0">
                <local:SkiaImage x:Name="imagenJuego"  Bitmap="{Binding ImagenPrincipal}" Height="200"/>
                <Label x:Name="lbName" HorizontalAlignment="Center" FontWeight="Bold" FontSize="20" Content="{Binding name}"></Label>
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Text="Fecha de lanzamiento:"/>
                        <Label x:Name="lbfechaLanzamiento" Grid.Row="0" Grid.Column="1"  Content="{Binding released}"/>
                        <Label  Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Content="Nota:"/>
                        <Label x:Name="lbRating" Grid.Row="1" Grid.Column="1"  Content="{Binding rating}"/>
                        <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Content="Numero de reviews:"/>
                        <Label x:Name="lbNumeroReviews" Grid.Row="2" Grid.Column="1"  Content="{Binding reviews_text_count}"/>
                        <Label Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Content="Nota metacritic:"/>
                        <Label x:Name="lbMetacritic" Grid.Row="3" Grid.Column="1"  Content="{Binding metacritic}"/>
                        <Label Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" Content="Tiempo para completar el juego:"/>
                        <Label x:Name="lbPlaytime" Grid.Row="4" Grid.Column="1"  Content="{Binding playtime}"/>
                        <Label Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" Content="Generos: "/>
                        <TextBlock x:Name="lbGeneros" Grid.Row="5" Style="{StaticResource textBlocks}" Grid.Column="1"  Text="{Binding generos}"/>
                        <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource textBlocks}" HorizontalAlignment="Right" Text="Tiendas: "/>
                        <TextBlock x:Name="lbTiendas" Grid.Row="6" Grid.Column="1" Style="{StaticResource textBlocks}" Text="{Binding tiendas}"/>
                        <Label Grid.Row="7" Grid.Column="0" HorizontalAlignment="Right" Content="Plataformas: "/>
                        <TextBlock x:Name="lbPlataformas" Grid.Row="7" Grid.Column="1" Style="{StaticResource textBlocks}" Text="{Binding plataformas}"/>
                        <Label Grid.Row="8" Grid.Column="0" HorizontalAlignment="Right" Content="etiquetas: "/>
                        <TextBlock x:Name="lbEtiquetas" Grid.Row="8" Grid.Column="1" Style="{StaticResource textBlocks}" Text="{Binding etiquetas}"/>
                        
                    </Grid>
                    



                </StackPanel>
            </ScrollViewer>
            

                <DataGrid x:Name="capturas" Grid.Column="1"  HeadersVisibility="None" GridLinesVisibility="None"  AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Header="Capturas" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding image}" Height="200"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                </DataGrid>
                <!--<vlc:VideoView x:Name="videoView" Height="200" Margin="0,10,0,0"/>-->
                    
            
           


        </Grid>
        
        
    </Grid>
</Window>
