<Window x:Class="CustomGameDB.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomGameDB"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>



        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        
        
        

        <Grid Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button x:Name="btIniciarSesioon" Margin="60,10">Iniciar Sesión</Button>
            <Button x:Name="btCrearNuevaCuenta" Margin="60,10" Grid.Column="1">Crear nueva cuenta</Button>

        </Grid>
        
        <Label Grid.Row="2" Margin="10" HorizontalAlignment="Right" Visibility="Collapsed">Usuario:</Label>
        <TextBox x:Name="tbUsuarioIniciarSesion" Grid.Row="2" Grid.Column="1" Margin="10" Visibility="Collapsed"></TextBox>
        <Label  Grid.Row="3" Margin="10" HorizontalAlignment="Right" Visibility="Collapsed">Contraseña:</Label>
        <TextBox x:Name="tbContrasenaInciarSesion" Grid.Row="3" Grid.Column="1" Margin="10" Visibility="Collapsed"></TextBox>
        <Button x:Name="btAceptarIniciarSesion" Grid.Row="5" Grid.ColumnSpan="2" Width="100" Height="24" Visibility="Collapsed">Aceptar</Button>
        
        
        <Label Grid.Row="1" Margin="10" HorizontalAlignment="Right">usuario:</Label>
        <TextBox x:Name="tbUsuarioCrearNuevaCuenta" Grid.Row="1" Grid.Column="1" Margin="10" ></TextBox>
        <Label Grid.Row="2" Margin="10" HorizontalAlignment="Right">contraseña:</Label>
        <TextBox x:Name="tbContrasenaCrearNuevaCuenta" Grid.Row="2" Grid.Column="1" Margin="10" ></TextBox>
        <Label Grid.Row="3" Margin="10" HorizontalAlignment="Right">email:</Label>
        <TextBox x:Name="tbEmailCrearNuevaCuenta" Grid.Row="3" Grid.Column="1" Margin="10" ></TextBox>
        <Label Grid.Row="4" Margin="10" HorizontalAlignment="Right">año de nacimiento:</Label>
        <TextBox x:Name="tbAnyoNacimiento" Grid.Row="4" Grid.Column="1" Margin="10" ></TextBox>
        <Button Grid.Row="5" Grid.ColumnSpan="2" Width="100" Height="24">Aceptar</Button>
        
    </Grid>
</Window>
